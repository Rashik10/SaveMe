<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.example.saveme.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Me"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Your Current Location:"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="100dp" />
    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />
    <Button
        android:id="@+id/setLocation"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_marginHorizontal="100dp"
        android:outlineSpotShadowColor="@android:color/holo_orange_dark"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/button_background"
        android:text="Set Location" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Your Message:"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="100dp"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="I am in danger. I need your help urgently." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Receiver Phone Number:"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="100dp" />

    <EditText
        android:id="@+id/phnNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="11"
        android:hint="Enter recever phone number"
        android:inputType="phone" />

    <Button
        android:id="@+id/seekHelp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_marginHorizontal="100dp"
        android:outlineSpotShadowColor="@android:color/holo_orange_dark"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/button_background"
        android:text="Seek Help" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="For Emergency Help:"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="100dp" />

    <Button
        android:id="@+id/emergencyHelp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="80dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Emergency Help!"
        android:background="@drawable/button_background"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="fill"
        android:textSize="18sp"
        android:text="Click here to add/change\ninfo for emergency help" />
    <Button
        android:id="@+id/setEmergencyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here"
        android:background="@color/colorPrimary"
        android:layout_marginStart="10dp"
        android:textStyle="bold"/>
</LinearLayout>
    <Button
        android:id="@+id/aboutApp"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About this app"
        android:textSize="15sp"
        android:background="@drawable/button_background"
        android:textStyle="bold"/>
</LinearLayout>
</ScrollView>